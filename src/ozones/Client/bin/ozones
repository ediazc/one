#!/usr/bin/ruby

if !ENV['ONE_LOCATION']
    puts "ONE_LOCATION not found."
    exit 1
end

OZONES_LOCATION = ENV['ONE_LOCATION'] + "/lib/ozones/Client"

$: << OZONES_LOCATION + "/lib"

require 'CLI/command_parser'
require 'CLI/OZonesHelper/ZonesHelper.rb'

cmd=CommandParser::CmdParser.new(ARGV) do
    usage "ozones COMMAND [args..] [options..]"	
    version OpenNebulaHelper::ONE_VERSION
    
    ########################################################################
    # Global Options
    ######################################################################## 
    set :option, CommandParser::OPTIONS
    
    begin
        helper = ZonesHelper.new "zone"
    rescue Exception => e  
        warn e.message
        exit -1
    end

    command :create, 'Create a new Zone', :file do
        helper.create_resource(args[0])
    end
    
    command :show, 'Show information of a particular Zone', :text do
        helper.show_resource(args[0],options)
    end
    
    command :list, 'Lists Zones in the pool', 
                :options=>CLIHelper::OPTIONS+OpenNebulaHelper::OPTIONS do
        helper.list_pool(options)
    end

    command :delete, 'Deletes a Zone', [:range, :zoneid] do
        helper.delete_resource(args,options) 
    end
end
