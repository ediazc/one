#!/usr/bin/ruby

OZONES_LOCATION = ENV['OZONES_LOCATION']

if !OZONES_LOCATION
    puts "OZONES_LOCATION not found."
    exit 1
end

$: << OZONES_LOCATION + "/lib"

require 'CLI/CommandParser'
require 'CLI/OZonesHelper/ZonesHelper.rb'

cmd=CLI::CommandParser.new(ARGV) do
    set :option, CLI::OPTIONS
    
    helper = ZonesHelper.new "zone"
    
    command :create, 'Create a new Zone', :file do
        helper.create_resource(args[0])
    end
    
    command :show, 'Show information of a particular Zone', :text do
        helper.show_resource(args[0],options)
    end
    
    command :list, 'Lists Zones in the pool', :option=>CLIHelper::OPTIONS do
        helper.list_pool(options)
    end

    command :delete, 'Deletes a Zone', [:range, :zoneid] do
        helper.delete_resource(args,options) 
    end
end
